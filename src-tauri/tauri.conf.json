{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "test-app",
  "version": "0.1.0",
  "identifier": "com.khomy.test-app",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420"
  },
  "plugins": {
    "fs": {
      "scope": [
        "**"
      ]
    },
    "dialog": {
      "scope": [
        "**"
      ]
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "width": 800,
        "height": 600,
        "title": "X@rT Explorer",
        "decorations": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}